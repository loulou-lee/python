# 원격 데이터베이스 연동 프로그램
# pip install mysqlclient
import MySQLdb

# conn = MySQLdb.connect(host = '127.0.0.1', user = 'root', password='123', database='test')
# print(conn)
# conn.close()

# sangdata table과 연동
config = {

    'host':'127.0.0.1',

    'user':'root',

    'password':'123',

    'database':'test',

    'port':3306,

    'charset':'utf8',

    'use_unicode':True

}

try:
    conn = MySQLdb.connect(**config) # **은 dict를 받는 것
    # print(conn)
    cursor = conn.cursor()
    
    # select
    sql = "select code, sang, su, dan from sangdata"
    cursor.execute(sql)
    
    # 방법1
    for data in cursor.fetchall():
        print(data)
    
except Exception as e:
    print('err :', e)
finally:
    cursor.close()
    conn.close()
